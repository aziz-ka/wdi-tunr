<div class="container">
  <header>
    <h1>Tunr</h1>

    <h2>Welcome <%= @current_listener.username %></h2>

    <form action="/songs/search" method="get">
      <input type="text" name="search_term" placeholder="search for song">
      <input type="submit">
    </form>
  </header>

  <div class="all">
  <% @songs.each do |song| %>  
    <div class="artist">
      <img src="<%= song.artwork_url %>" alt="">
      <h3><%= song.title %></h3>
      <audio controls src="<%= song.preview_link %>"></audio>
      <form action="/songs/<%= song.id %>" method="post">
        <%= token_tag %>
        <input type="hidden" name="_method" value="delete">
        <button type="submit">
          <i class="fa fa-trash-o"></i>
        </button>
      </form>
    </div>
  <% end %>
  </div>
</div>